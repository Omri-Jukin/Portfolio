# Email Configuration
SES_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# MailChannels Configuration (Free for Cloudflare Workers)
MAILCHANNELS_API_KEY=your_mailchannels_api_key_here

# Alternative: Resend Configuration (Recommended)
RESEND_API_KEY=re_your_resend_api_key_here

# Alternative: SendGrid Configuration  
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Email Provider Priority (gmail, ses, resend, sendgrid, mailchannels)
EMAIL_PROVIDER=gmail

# Gmail SMTP Configuration (Free option)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password

# AWS SES Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Email Configuration
EMAIL_RATE_LIMIT_MAX_REQUESTS=1
EMAIL_RATE_LIMIT_WINDOW_MS=1000

# Logging
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key

# Blog API Configuration
BLOG_API_KEY=your_blog_api_key_here 
