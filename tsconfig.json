{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./*"],
      "~/*": ["./Components/*"],
      "$/*": ["./lib/*"],
      "%/*": ["./locales/*"],
      "^/*": ["./public/*"],
      "!/*": ["./theme/*"],
      "&/*": ["./Components/Providers/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "Components/**/*.test.tsx",
    "tests/**/*.test.tsx"
  ],
  "exclude": ["node_modules"]
}
